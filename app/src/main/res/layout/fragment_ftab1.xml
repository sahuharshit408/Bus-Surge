<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ftab1">

    <!-- TODO: Update blank fragment layout -->

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <Button

        android:id="@+id/StudentEmailSignIn"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/gmailsigninbtnshape"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:foregroundGravity="center"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="SignIn with Email"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/StudentPhoneSignIn"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/phonesigninbtnshape"
        android:drawableLeft="@drawable/ic_baseline_phone_24"
        android:foregroundGravity="center"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="SignIn with Phone"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <TableRow
            android:id="@+id/hr1"
            android:layout_width="90dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#0B0B0B"
            android:gravity="center"
            android:layout_gravity="center"
            >

        </TableRow>

        <TextView
            android:id="@+id/OR"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="OR"
            android:textColor="#202020"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TableRow
            android:id="@+id/hr2"
            android:layout_width="90dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#0B0B0B"
            android:gravity="center"
            android:layout_gravity="center"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/googlelogo" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="10dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:src="@drawable/applelogo" />
    </LinearLayout>

    <TextView

        android:gravity="center"
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:text="New to Bus Surge?"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingLeft="15dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/Studentsignup"
        android:layout_width="106dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@drawable/btnshape"
        android:text="SIGN UP"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"/>






</LinearLayout>
</FrameLayout>